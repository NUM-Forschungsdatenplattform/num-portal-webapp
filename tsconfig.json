{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "paths": {
      "num-lib": [
        "dist/num-lib/num-lib",
        "dist/num-lib"
      ],
      "num-project": [
        "project/num-lib/public-api.ts"
      ]
    },
    "module": "es2020",
    "lib": ["es2018", "dom"],
    "allowSyntheticDefaultImports": true
  }
}
