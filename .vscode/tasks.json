{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Dev Server",
      "type": "shell",
      "command": ["npm", "run", "start:hmr"],
      "isBackground": true,
      "group": {
        "isDefault": true,
        "kind": "build"
      },
      "options": {
        "cwd": "${workspaceFolder}",
        "env": {
          "NODE_ENV": "development"
        }
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true
      },
      "problemMatcher": {
        "owner": "typescript",
        "source": "ts",
        "applyTo": "closedDocuments",
        "fileLocation": ["relative", "${cwd}"],
        "pattern": "$tsc",
        "background": {
          "activeOnStart": true,
          "beginsPattern": {
            "regexp": "(.*?)"
          },
          "endsPattern": {
            "regexp": "Compiled |Failed to compile."
          }
        }
      }
    },
    {
      "label": "Stop Dev Server",
      "type": "shell",
      "command": "echo ${input:terminate-dev-server}"
    }
  ],
  "inputs": [
    {
      "id": "terminate-dev-server",
      "type": "command",
      "command": "workbench.action.tasks.terminate",
      "args": "Start Dev Server"
    }
  ]
}
